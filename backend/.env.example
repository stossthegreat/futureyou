# ===========================================
# HabitOS Backend Environment Variables
# ===========================================

# ===========================================
# CORE INFRASTRUCTURE (Required)
# ===========================================

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/habitos"

# Redis (for BullMQ queues and caching)
REDIS_URL="redis://localhost:6379"

# Server Configuration
PORT=8080
HOST=0.0.0.0
NODE_ENV=production
BACKEND_PUBLIC_URL="https://your-backend.railway.app"

# ===========================================
# AI SERVICES (OpenAI)
# ===========================================

# OpenAI API Key (required for AI features)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# OpenAI Configuration
OPENAI_MODEL="gpt-4o-mini"
LLM_MAX_TOKENS=450
LLM_TIMEOUT_MS=10000

# AI Usage Limits
LLM_DAILY_MSG_CAP_FREE=0
LLM_DAILY_MSG_CAP_PRO=150
ALLOW_FREE_AI=false

# ===========================================
# VOICE SERVICES (ElevenLabs)
# ===========================================

# ElevenLabs API Key (required for TTS)
ELEVENLABS_API_KEY="your-elevenlabs-api-key-here"
ELEVENLABS_TTS_TIMEOUT_MS=10000

# Voice IDs for different mentors
ELEVENLABS_VOICE_STRICT="voice-id-for-strict-mentor"
ELEVENLABS_VOICE_BALANCED="voice-id-for-balanced-mentor"
ELEVENLABS_VOICE_LIGHT="voice-id-for-light-mentor"
ELEVENLABS_VOICE_MARCUS="voice-id-for-marcus-aurelius"
ELEVENLABS_VOICE_DRILL="voice-id-for-drill-sergeant"
ELEVENLABS_VOICE_CONFUCIUS="voice-id-for-confucius"
ELEVENLABS_VOICE_LINCOLN="voice-id-for-lincoln"
ELEVENLABS_VOICE_BUDDHA="voice-id-for-buddha"

# TTS Usage Limits
TTS_DAILY_CHAR_CAP_FREE=0
TTS_DAILY_CHAR_CAP_PRO=15000

# ===========================================
# NOTIFICATIONS (Firebase)
# ===========================================

# Firebase Configuration (required for push notifications)
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Private Key Here\n-----END PRIVATE KEY-----"

# ===========================================
# PAYMENTS (Stripe)
# ===========================================

# Stripe Configuration (required for payments)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key-here"
STRIPE_PUBLIC_KEY="pk_test_your-stripe-public-key-here"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret-here"

# ===========================================
# STORAGE (S3 Compatible)
# ===========================================

# S3 Configuration (for voice file storage)
S3_ENDPOINT="https://your-s3-endpoint.com"
S3_BUCKET="your-bucket-name"
S3_ACCESS_KEY="your-s3-access-key"
S3_SECRET_KEY="your-s3-secret-key"

# ===========================================
# FEATURE FLAGS
# ===========================================

# Feature Toggles
PRO_FEATURES_ENABLED=true
FREE_NOTIFICATIONS_ENABLED=false
LLM_ENABLED=true
TTS_ENABLED=true

# ===========================================
# EMAIL SERVICES (Optional)
# ===========================================

# Email Configuration (for notifications)
FROM_EMAIL="noreply@your-domain.com"
REPLY_TO_EMAIL="support@your-domain.com"

# ===========================================
# LOGGING & MONITORING
# ===========================================

# Logging
LOG_LEVEL="info"

# ===========================================
# RAILWAY DEPLOYMENT
# ===========================================

# Railway specific (set automatically by Railway)
RAILWAY_ENVIRONMENT=production
RAILWAY_STATIC_URL="https://your-app.railway.app"

# ===========================================
# NOTES
# ===========================================
# 
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env files to version control
# 3. For Railway deployment, set these as environment variables in Railway dashboard
# 4. All services are integrated with real APIs - no mocks or stubs
# 5. The application will gracefully handle missing optional services
#