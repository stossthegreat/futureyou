{
  "name": "backend",
  "version": "1.0.0",
  "description": "DrillSergeant HabitOS backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node src/server.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/server.js",
    "worker:scheduler": "node dist/workers/scheduler.worker.js",
    "worker:notifications": "node dist/workers/notifications.worker.js",
    "start:all": "concurrently \"node dist/server.js\" \"node dist/workers/scheduler.worker.js\"",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.899.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^6.16.3",
    "axios": "^1.12.2",
    "bullmq": "^5.59.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.6.1",
    "firebase-admin": "^13.5.0",
    "form-data": "^4.0.4",
    "ioredis": "^5.8.0",
    "node-cron": "^4.2.1",
    "openai": "^6.0.0",
    "pino": "^9.13.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.16.3",
    "rrule": "^2.8.1",
    "stripe": "^18.5.0",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/node": "^24.6.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  }
}
