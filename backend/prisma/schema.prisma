generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Plan {
  FREE
  PRO
}

enum Tone {
  strict
  balanced
  light
}

model User {
  id           String  @id @default(cuid())
  email        String? @unique
  tz           String  @default("Europe/London")
  tone         Tone    @default(balanced)
  intensity    Int     @default(2)
  consentRoast Boolean @default(false)
  safeWord     String?
  plan         Plan    @default(FREE)

  // NEW: OS-specific fields
  mentorId        String? // e.g. "marcus" | "drill" | "confucius" | "lincoln" | "buddha"
  fcmToken        String? // Firebase Cloud Messaging token for push
  nudgesEnabled   Boolean @default(true)
  briefsEnabled   Boolean @default(true)
  debriefsEnabled Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  habits          Habit[]
  antiHabits      AntiHabit[]
  alarms          Alarm[]
  events          Event[]
  userFacts       UserFacts?
  tasks           Task[]
  todaySelections TodaySelection[]
}

model Habit {
  id              String    @id @default(cuid())
  userId          String
  title           String
  schedule        Json      @default("{}")
  streak          Int       @default(0)
  lastTick        DateTime?
  color           String    @default("emerald")
  context         Json      @default("{}")
  reminderEnabled Boolean   @default(false)
  reminderTime    String?   @default("08:00")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  todaySelections TodaySelection[]

  @@index([userId])
}

model AntiHabit {
  id          String    @id @default(cuid())
  userId      String
  name        String
  targetMins  Int       @default(10)
  cleanStreak Int       @default(0)
  lastSlip    DateTime?
  dangerWin   Json?     @default("{}")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Alarm {
  id        String    @id @default(cuid())
  userId    String
  label     String
  rrule     String
  tone      Tone      @default(balanced)
  enabled   Boolean   @default(true)
  nextRun   DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([nextRun])
}

model Event {
  id        String   @id @default(cuid())
  userId    String
  ts        DateTime @default(now())
  type      String
  payload   Json     @default("{}")
  embedding Bytes?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, ts])
  @@index([type])
}

model UserFacts {
  userId    String   @id
  json      Json     @default("{}")
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Task {
  id          String    @id @default(cuid())
  userId      String
  title       String
  description String?
  dueDate     DateTime?
  schedule    Json      @default("{}")
  priority    Int       @default(1)
  category    String?
  completed   Boolean   @default(false)
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  todaySelections TodaySelection[]

  @@index([userId])
}

model TodaySelection {
  id        String   @id @default(cuid())
  userId    String
  habitId   String?
  taskId    String?
  date      String // YYYY-MM-DD format
  order     Int      @default(0)
  createdAt DateTime @default(now())

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  habit Habit? @relation(fields: [habitId], references: [id], onDelete: Cascade)
  task  Task?  @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model VoiceCache {
  id        String   @id
  text      String
  voice     String
  url       String
  createdAt DateTime @default(now())

  @@index([createdAt])
}

model HabitSnapshot {
  id     String   @id @default(cuid())
  userId String
  at     DateTime @default(now())
  data   Json

  @@index([userId])
}

model Completion {
  id          String    @id @default(cuid())
  userId      String
  habitId     String
  date        DateTime
  done        Boolean   @default(false)
  completedAt DateTime?

  @@unique([userId, habitId, date])
  @@index([userId])
  @@index([date])
}

enum CoachMessageKind {
  nudge
  brief
  mirror
  letter
}

model CoachMessage {
  id        String           @id @default(cuid())
  userId    String
  kind      CoachMessageKind
  title     String
  body      String
  meta      Json?
  createdAt DateTime         @default(now())
  readAt    DateTime?

  @@index([userId])
}

model FutureYouPurposeProfile {
  id             String    @id @default(cuid())
  userId         String    @unique
  lifeTask       String?
  strengths      String[]  @default([])
  valuesRank     String[]  @default([])
  sdtAutonomy    Int?
  sdtCompetence  Int?
  sdtRelatedness Int?
  flowContexts   String[]  @default([])
  redTags        String[]  @default([])
  odysseyPlans   Json?
  keystones      String[]  @default([])
  antiHabits     String[]  @default([])
  lastReviewAt   DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model FutureYouChapter {
  id        String   @id @default(cuid())
  userId    String
  phase     String
  title     String
  bodyMd    String
  words     Int
  draftHash String
  status    String   @default("final")
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([userId, phase])
  @@index([draftHash])
}

model FutureYouBookEdition {
  id         String   @id @default(cuid())
  userId     String
  version    Int
  title      String
  bodyMd     String
  chapterIds String[]
  createdAt  DateTime @default(now())

  @@index([userId])
}

model FutureYouJob {
  id         String    @id @default(cuid())
  userId     String
  type       String
  payload    Json
  status     String    @default("queued")
  error      String?
  insertedAt DateTime  @default(now())
  startedAt  DateTime?
  finishedAt DateTime?
  idemKey    String    @unique

  @@index([userId])
}

// NEW: Life's Task Discovery Engine Tables (Standalone System)
model LifeTaskChapter {
  id                     String    @id @default(cuid())
  userId                 String
  chapterNumber          Int // 1-7
  conversationTranscript Json // Full message history
  extractedPatterns      Json? // Red threads, values, strengths
  proseText              String? // 350-600 word generated chapter
  completedAt            DateTime?
  timeSpentMinutes       Int       @default(0)
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  @@unique([userId, chapterNumber])
  @@index([userId])
  @@index([userId, chapterNumber])
}

model LifeTaskArtifact {
  id           String   @id @default(cuid())
  userId       String
  artifactType String // 'story_map', 'shadow_map', 'strengths_grid', etc.
  data         Json // Artifact-specific structure
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([userId, artifactType])
  @@index([userId])
  @@index([userId, artifactType])
}

model LifeTaskBook {
  id               String   @id @default(cuid())
  userId           String
  title            String
  compiledMarkdown String   @db.Text // Full book content
  chapterIds       String[] // References to LifeTaskChapter ids
  createdAt        DateTime @default(now())
  version          Int      @default(1)

  @@index([userId])
  @@index([userId, version])
}
