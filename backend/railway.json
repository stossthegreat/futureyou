{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs", "npm"]
        },
        "install": {
          "commands": ["npm ci"]
        },
        "build": {
          "commands": ["npm run build"]
        },
        "start": {
          "cmd": "npm start"
        }
      }
    }
  }
}